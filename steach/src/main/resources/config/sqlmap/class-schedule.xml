<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.steach.repository.mapper.CurriculumMapper">
	<resultMap id="schMap" type="ClassSchedule">
		<result column="sch_no" property="schNo"/>
		<result column="class_no" property="classNo"/>
		<result column="id" property="id"/>
		<result column="start" property="start"/>
		<result column="end" property="end"/>
		<result column="title" property="title"/>
		<result column="detail" property="detail"/>
		<result column="sch_id" property="schId"/>
	</resultMap>
	
	
	<!-- class 별 스케줄 조회  -->
	<select id="selectSchByClassNo" parameterType="int" resultMap="schMap">
		select *
		  from tb_class_schedule 
		 where class_no=#{classNo}
	</select>
	
	
	<!-- 달력 DB저장하기  -->
	<insert id="insertSchedule" parameterType="ClassSchedule">
		insert into tb_class_schedule(
										class_no,
										start,
										end,
										title,
										detail,
										url,
										allDay,
										color
												)values(
														#{classNo},
														#{start},
														#{end},
														#{title},
														#{detail},
														#{url},
														#{allDay},
														#{color}
																	)
	</insert>

	
</mapper>
