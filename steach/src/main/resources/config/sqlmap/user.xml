<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.steach.repository.mapper.UserMapper">
	<resultMap id="userMap" type="user">
		<result column="id" property="id" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="phone" property="phone" />
		<result column="addr" property="addr" />
		<result column="reg_date" property="regDate" />
		<result column="profile" property="profile" />
		<result column="profile_path" property="profilePath" />
	</resultMap>
	

	<!-- 회원 등록 -->
	<insert id="registerUser" parameterType="user">
		insert into tb_user(
		id, name, profile, profile_path, password
		) values (
		#{id}, #{name},  #{profile}, #{profilePath}, #{password}
		)
	</insert>

	<!-- 아이디 중복 체크 -->
	<select id="checkId" parameterType="user" resultType="int" flushCache="true" useCache="false">
		select count(*)
		  from tb_user
		 where id = #{id}
	</select>


	<!-- 로그인 -->
	<select id="userLogin" parameterType="user" resultMap="userMap">
		select *
		from tb_user
		where id = #{id}
	</select>

	
	<!-- 비밀번호찾을 아이디 체크 -->
	<select id="checkpassId" parameterType="user" resultType="int" flushCache="true" useCache="false">
		select count(*)
		  from tb_user
		 where id = #{id}
		   and name=#{name}
	</select>
	<!-- 비밀번호찾기시 임시비밀번호 변경 -->
	<update id="temppass" parameterType="user">
		update tb_user
		   set password = #{password}
		 where id = #{id}
		   and name = #{name}
	</update>
	
	<!-- 임시비밀번호 확인 -->
	<select id="temppasschk" parameterType="user" resultType="int">
		select count(*)
		  from tb_user
		 where password = #{password}
	</select>

	<!-- 현재 비밀번호 체크할 아이디 -->
	<select id="checkPass" parameterType="user" resultMap="userMap">
		select *
		from tb_user
		where id = #{id}
	</select>

	<!-- 비밀번호 수정 -->
	<update id="updatePass" parameterType="user">
		update tb_user
		set password = #{password}
		where id = #{id}
	</update>
	
	<!-- 전화번호 등록 or 수정 -->
	<update id="updatePhone" parameterType="user" flushCache="true">
		update tb_user
		   set phone = #{phone}
		 where id = #{id}
	</update>
	<!-- 주소 등록 or 수정 -->
	<update id="updateAddr" parameterType="user" flushCache="true">
		update tb_user
		   set addr = #{addr}
		 where id = #{id}
	</update>

	<!-- 프로필 이미지 수정 -->
	<update id="profileImg" parameterType="user">
		update tb_user 
		   set profile = #{profile}, profile_path=#{profilePath}
		 where id=#{id}
	</update>
	
	<!-- 마이페이지 로그인유저 정보 -->
	<select id="mypage" parameterType="user" resultMap="userMap">
		select *
		  from tb_user
		 where id=#{id}
	</select>


</mapper>